<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar</h4>
            <form method="post" action="/admin/hoy/modificar" enctype="multipart/form-data">
                <input type="hidden" value="{{hoy.id}}" name="id">
                <div class="form-group">
                    <input type="text" placeholder="TÃ­tulo" value="{{hoy.titulo}}" class="form-control" name="titulo">
                </div>
                <div class="form-group">
                    <textarea placeholder="Subtitulo" class="form-control" name="subtitulo">{{hoy.subtitulo}}</textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen:<input type="file" class="form-control" name="imagen" id="imagen" /></label>
                </div>

                <div class="form-group">
                    <textarea placeholder="Cuerpo" class="form-control" name="cuerpo">{{hoy.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>